<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_large"
        android:paddingTop="64dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_revert"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/create_account"
            android:textColor="@color/text"
            android:textSize="@dimen/text_size_xlarge"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_border"
            android:src="@drawable/profile_avatar"
            android:layout_marginTop="@dimen/margin_xlarge"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle" />

        <TextView
            android:id="@+id/tvPhotoDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/photo_description"
            android:textColor="@color/text"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_xlarge"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivProfile" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilLicenseNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/license_number"
            android:layout_marginTop="@dimen/margin_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPhotoDescription"
            app:boxStrokeColor="@color/stroke"
            app:hintTextColor="@color/label"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etLicenseNumber"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:inputType="number"
                android:hint="@string/license_number_hint"
                android:textSize="@dimen/text_size_medium" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilIssueDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/issue_date"
            android:layout_marginTop="@dimen/margin_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilLicenseNumber"
            app:boxStrokeColor="@color/stroke"
            app:hintTextColor="@color/label"
            app:startIconDrawable="@android:drawable/ic_menu_today"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etIssueDate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:hint="@string/date_hint"
                android:textSize="@dimen/text_size_medium" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvUploadLicense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/upload_license_photo"
            android:textColor="@color/label"
            android:textSize="@dimen/text_size_medium"
            android:layout_marginTop="@dimen/margin_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilIssueDate" />

        <LinearLayout
            android:id="@+id/llUploadLicense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvUploadLicense">

            <Button
                android:id="@+id/btnUploadLicense"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/upload_button"
                android:layout_marginEnd="@dimen/margin_medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upload_photo"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_medium" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvUploadPassport"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/upload_passport_photo"
            android:textColor="@color/label"
            android:textSize="@dimen/text_size_medium"
            android:layout_marginTop="@dimen/margin_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llUploadLicense" />

        <LinearLayout
            android:id="@+id/llUploadPassport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvUploadPassport">

            <Button
                android:id="@+id/btnUploadPassport"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/upload_button"
                android:layout_marginEnd="@dimen/margin_medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upload_photo"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_medium" />
        </LinearLayout>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:text="@string/next"
            android:textColor="@color/white"
            android:background="@color/primary"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:layout_marginBottom="66dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llUploadPassport"
            app:layout_constraintBottom_toBottomOf="parent" />

        <View
            android:id="@+id/homeIndicator"
            android:layout_width="134dp"
            android:layout_height="5dp"
            android:background="@color/black"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnNext" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

