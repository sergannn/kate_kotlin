<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <!-- Заголовок "Настройки" по центру -->
    <TextView
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Настройки"
        android:textSize="20sp"
        android:textColor="@color/text_black"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp" />

    <!-- Список настроек -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 1. ПРОФИЛЬ -->
            <LinearLayout
                android:id="@+id/layoutProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <!-- Аватарка -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="25dp"
                    android:elevation="0dp">

                    <ImageView
                        android:id="@+id/ivAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_profile_settings"
                        android:background="@color/background_gray"
                        android:padding="8dp"
                        android:scaleType="centerInside" />

                </com.google.android.material.card.MaterialCardView>

                <!-- ФИО и почта -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Иван Иванов"
                        android:textSize="16sp"
                        android:textColor="@color/text_black" />

                    <TextView
                        android:id="@+id/tvUserEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="user@example.com"
                        android:textSize="14sp"
                        android:textColor="@color/text_gray"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Стрелочка -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/arrow_icon_right" />

            </LinearLayout>

            <!-- 2. МОИ БРОНИРОВАНИЯ -->
            <LinearLayout
                android:id="@+id/layoutMyBookings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <!-- Иконка телефона -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/uber_taxi_settings" />

                <!-- Надпись -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Мои бронирования"
                    android:textSize="16sp"
                    android:textColor="@color/text_black"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

                <!-- Стрелочка -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/arrow_icon_right" />

            </LinearLayout>

            <!-- 3. ТЕМА -->
            <LinearLayout
                android:id="@+id/layoutTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <!-- Иконка темы -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_theme_settings" />

                <!-- Надпись -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Тема"
                    android:textSize="16sp"
                    android:textColor="@color/text_black"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

                <!-- Стрелочка -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/arrow_icon_right" />

            </LinearLayout>

            <!-- 4. УВЕДОМЛЕНИЯ -->
            <LinearLayout
                android:id="@+id/layoutNotifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <!-- Иконка уведомлений (звоночек) -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/notification_settings" />

                <!-- Надпись -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Уведомления"
                    android:textSize="16sp"
                    android:textColor="@color/text_black"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

                <!-- Стрелочка -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/arrow_icon_right" />

            </LinearLayout>

            <!-- 5. ПОДКЛЮЧИТЬ СВОЙ АВТОМОБИЛЬ -->
            <LinearLayout
                android:id="@+id/layoutAddCar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <!-- Иконка автомобиля -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/banknotes_settings" />

                <!-- Надпись -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Подключить свой автомобиль"
                    android:textSize="16sp"
                    android:textColor="@color/text_black"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

                <!-- Стрелочка -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/arrow_icon_right" />

            </LinearLayout>

            <!-- Серая горизонтальная линия -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text_gray"
                android:alpha="0.3"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" />

            <!-- 6. ПОМОЩЬ -->
            <LinearLayout
                android:id="@+id/layoutHelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <!-- Иконка вопросительный знак -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/help_settings" />

                <!-- Надпись -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Помощь"
                    android:textSize="16sp"
                    android:textColor="@color/text_black"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

                <!-- Стрелочка -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/arrow_icon_right" />

            </LinearLayout>

            <!-- 7. ПРИГЛАСИ ДРУГА -->
            <LinearLayout
                android:id="@+id/layoutInviteFriend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Иконка письмо -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/mail_settings" />

                <!-- Надпись -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="Пригласи друга"
                    android:textColor="@color/text_black"
                    android:textSize="16sp" />

                <!-- Стрелочка -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/arrow_icon_right" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Нижняя панель навигации - ПОДНИМАЕМ ВЫШЕ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/background_white"
        android:elevation="8dp"
        android:paddingBottom="16dp">

        <!-- Домик -->
        <LinearLayout
            android:id="@+id/layoutHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="12dp"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/home_settings"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Главная"
                android:textSize="12sp"
                android:textColor="@color/text_gray"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Закладка -->
        <LinearLayout
            android:id="@+id/layoutBookmarks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="12dp"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/bookmark_settings"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Закладки"
                android:textSize="12sp"
                android:textColor="@color/text_gray"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Шестеренка (активная) -->
        <LinearLayout
            android:id="@+id/layoutSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="12dp"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_settings" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Настройки"
                android:textSize="12sp"
                android:textColor="@color/text_gray"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>