<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DriveNext">

        <!-- Splash всегда запускается первым -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.DriveNext">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Onboarding -->
        <activity
            android:name=".OnboardingActivity"
            android:exported="true" />

        <!-- Login -->
        <activity
            android:name=".LoginActivity"
            android:exported="true" />

        <!-- Registration Steps -->
        <activity
            android:name=".RegistrationStep1Activity"
            android:exported="true" />

        <activity
            android:name=".RegistrationStep2Activity"
            android:exported="true" />

        <activity
            android:name=".RegistrationStep3Activity"
            android:exported="true" />

        <!-- Success Register -->
        <activity
            android:name=".SuccessRegisterActivity"
            android:exported="true" />

        <!-- No Connection -->
        <activity
            android:name=".NoConnectionActivity"
            android:exported="true" />

        <!-- Main (пока заглушка) -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.DriveNext" />

        <activity android:name=".GettingStartedActivity" />

        <activity
            android:name=".SettingsActivity"
            android:label="Настройки"
            android:parentActivityName=".MainActivity" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name=".CarDetailsActivity"
            android:label="Детали автомобиля"
            android:parentActivityName=".SearchResultsActivity" />
        <activity
            android:name=".BookingActivity"
            android:label="Оформление аренды"
            android:parentActivityName=".CarDetailsActivity" />
        <activity
            android:name=".BookingSuccessActivity"
            android:exported="true" />
        <activity
            android:name=".MyBookingsActivity"
            android:label="Мои бронирования"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".BookingDetailsActivity"
            android:label="Детали бронирования"
            android:parentActivityName=".MyBookingsActivity" />
        <activity
            android:name=".FavoritesActivity"
            android:label="Избранное"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SearchResultsActivity"
            android:label="Результаты поиска"
            android:parentActivityName=".MainActivity" />

        <activity android:name=".ProfileActivity" />

    </application>

</manifest>